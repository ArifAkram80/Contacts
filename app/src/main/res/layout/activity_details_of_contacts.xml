<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arif.contacts.DetailsOfContacts"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/DetImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/DetName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Name of Contacts"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/DetMob"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:hint="Name of Contacts"
        android:layout_weight="1"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="phone"/>
    <TextView
        android:id="@+id/DetEmail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:hint="contacts Email"
        android:textAlignment="center"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textEmailAddress"/>
    <Button
        android:id="@+id/DeleteButt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Delete"
        android:background="#E91E63"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        />



</LinearLayout>
