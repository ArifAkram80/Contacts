<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arif.contacts.EditActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/UPimg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_weight="10"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/UPImgBut"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ffffff"
            android:drawablePadding="5dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/UPName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Name of Contacts"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/UPMob"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:hint="Mobile Number"
        android:layout_weight="1"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/UPEmail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:hint="contacts Email"
        android:textAlignment="center"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/UpButt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#E91E63"
        android:text="Update"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />




</LinearLayout>
